(deftemplate pair
	(slot v1)
	(slot v2)
)

(deffacts init-facts
	(pair (v1 1) (v2 2))
	(pair (v1 2) (v2 1))
	(pair (v1 4) (v2 2))
	(pair (v1 2) (v2 2))
)

(defrule compare1
	(pair (v1 ?i1) (v2 ?i2&:(> ?i1 ?i2)))
	=>
	(printout t ?i1" > "?i2 crlf)
)

(defrule compare2
	(pair (v1 ?i1) (v2 ?i2&:(< ?i1 ?i2)))
	=>
	(printout t ?i1" < "?i2 crlf)
)

(defrule compare3
	(pair (v1 ?i1) (v2 ?i1))
	=>
	(printout t ?i1" = "?i1 crlf)
)
