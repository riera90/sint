(deftemplate animal
	(slot nombre)
	(slot sonido)
)

(deffacts init-facts
	(sonido guau)
	(sonido omaewa)
	(sonido miau)
	(nombre pollo)
	(animal (nombre perro) (sonido guau))
	(animal (nombre pollo) (sonido it_fuking_does_ngothing))
	(animal (nombre gato ) (sonido miau))
)

(defrule print_complete_animal
	(animal (sonido ?sound) (nombre ?name))
	(or
		(sonido ?sound)
		(nombre ?name )
	)
	=>
	(printout t ?name" -> "?sound crlf)
)
